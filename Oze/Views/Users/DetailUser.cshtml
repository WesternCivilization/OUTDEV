@model oze.data.view_DetailUser
<section>                
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <input type="hidden" id="ID" name="ID" value="@Model.ID" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Tên</label>
        <div class="col-sm-9">
            @Model.FullName
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Tên truy cập</label>
        <div class="col-sm-9">
            @Model.UserName
        </div>
    </div>
    
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Email</label>
        <div class="col-sm-9">
            @Model.Email
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">IdentityNumber</label>
        <div class="col-sm-9">
            @Model.IdentityNumber
        </div>
    </div>

    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Địa chỉ</label>
        <div class="col-sm-9">
           @Model.Address
        </div>
    </div>

    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Điện thoại</label>
        <div class="col-sm-9">
            @Model.Mobile
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Trạng thái</label>
        <div class="col-sm-9">
             @(Model.Status == 1 ? "Đang sử dụng" : "Không sử dụng")
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Active?</label>
        <div class="col-sm-9">
              @(Model.IsActive == 1 ? "Đang active" : "Không active")
        </div>
    </div>
    <hr />
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Khách sạn</label>
        <div class="col-sm-9">
                @Model.HotelName           
        </div>
    </div>
    <div class="form-group row">
        <label for="lblnameks" class="col-sm-3 control-label">Phân quyền</label>
        <div class="col-sm-9">
            @Model.GroupName
        </div>
    </div>
</section>