        html = html +
         ((status1 != 11) ? '<a class="btn btn-primary waves-effect waves-light btn-menu" href="javascript:changeRoomStatus1(' + id + ',11)"><i class="glyphicon glyphicon-cloud"></i>Báo phòng hòng</a>' : '') +
