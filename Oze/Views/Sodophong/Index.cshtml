<script type="text/javascript">
    var g_Reservation = new ReservationRoom();
    $(document).ready(function ()
    {
        $("#containerSodophong").load("/Sodophong/sodophong");
        $("#search_text").keydown(function (e) {
            searchDiv();
        });
