                    <option value="5">202</option>
                    <option value="6">203</option>
                </select>*@
            </div>
        </div>
        <div class="form-group col-md-3 not-padding-right">
            <div class="col-md-4 not-padding">
                <label class="lbl-name">Hạng phòng:</label>
            </div>
            <div class="col-md-8 not-padding">
