                <label class="lbl-name">Trạng thái:</label>
            </div>
            <div class="col-md-8 not-padding">
                @Html.DropDownList("GroupType", (SelectList)ViewData["trangthai"], new { @class = "form-control dll-content", @data = "GroupType", @id = "ddlReservationStatus" })
