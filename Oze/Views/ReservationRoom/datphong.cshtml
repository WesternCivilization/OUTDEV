        g_Reservation.init();

        @if (oModel.RoomID > 0) 
        {
            <text>
            //$("#dllRoom").val(@ViewBag.roomid);
            $.get("/Common/GetRoomTypeByRoomID?roomid=" + $('#dllRoom').val(), function (data)
            {
                if (data.result) {
                    if (data.result.Id)
                    {
                        $("#dllRoomTypeID").val(data.result.Id);
                        g_Reservation.loadPrice();
                    }
                }
            });
            </text>
        }
        else if (@ViewBag.roomid!="-1") 
        {
            <text>
            $("#dllRoom").val(@ViewBag.roomid);
            $.get("/Common/GetRoomTypeByRoomID?roomid=" + $('#dllRoom').val(), function (data) {
                if (data.result) {
                    if (data.result.Id)
                    {
                        $("#dllRoomTypeID").val(data.result.Id);
                        g_Reservation.loadPrice();
                    }
                }
            });
            </text>
        }
    });
</script>
