@model Oze.Models.LoginModel
@{
    Layout = "~/Views/Shared/_AccountRoot.cshtml";
}
@using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()
<div class="login-box-width">
  <!-- /.login-logo -->
  <div class="login-box-body">
      <div class="box-content" style="border:none !important;">
          <div class="login-logo">
              <i class="logo-icon"></i>
          </div>
          <form action="../../index2.html" method="post">
              <div class="form-group has-feedback has-feedback-input">
                  <input style="padding-left:0px !important;" type="text" id="UserName" name="UserName" class="form-controls" placeholder="TÊN ĐĂNG NHẬP" autocomplete="off" required>
              </div>
              <div class="form-group has-feedback has-feedback-input">
                  <input style="padding-left:0px !important;" type="password" id="Password" name="Password" class="form-controls" placeholder="MẬT KHẨU" autocomplete="off" required>
              </div>
              <div class="row has-feedback-input">
                  <div class="col-xs-7">
                      <div class="checkbox icheck">
                          <label>
                              <input type="checkbox" id="chkRememberMe" name="chkRememberMe"> Ghi nhớ đăng nhập
                          </label>
                      </div>
                  </div>
                  <!-- /.col -->
                  <div class="col-xs-5 text-right">
                      <div class="checkbox icheck">
                          @Html.ActionLink("Quên mật khẩu", "Index", "Accounts", null, null)
                      </div>
                  </div>
                  <!-- /.col -->
              </div>
              @{
                if (@ViewBag.Mesg != null)
                {                    
                  <div class="row">
                      <div class="col-xs-12 text-red">
                          <div style="padding: 10px 0px;">@ViewBag.Mesg</div>
                      </div>
                  </div>
                }
              }
              <div class="row has-feedback-input">
                  <div class="col-xs-12">
                      <button type="submit" name="command" value="SignInSub" id="btnSave" class="btn btn-block btn-info btn-line-height btn-oze-login">ĐĂNG NHẬP</button>
                      @*<button type="button" name="command" value="SignInSub" id="btnSave" class="btn btn-block btn-info btn-line-height btn-oze-login">ĐĂNG NHẬP</button>*@
                  </div>
              </div>
</form>
      </div>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

}



  



